{
  "name": "nextjs-ts-template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:e2e:headless": "echo 'test:e2e:headless'",
    "test:e2e": "echo 'test:e2e'",
    "test:all": "npm run test:coverage && npm run test:e2e:headless",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci",
    "standardize": "npm run lint && npm run format",
    "format": "prettier --write \"{src,__tests__}/**/*.{js,jsx,tsx,ts,json,md}\"",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "pre-push": "npm run test:all"
  },
  "dependencies": {
    "next": "14.1.3",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "babel-jest": "^29.7.0",
    "eslint": "^8",
    "eslint-config-next": "^14.1.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest-dom": "^5.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^6.2.0",
    "husky": "^9.0.11",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "resize-observer-polyfill": "^1.5.1",
    "typescript": "^5"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "npm run standardize"
  }
}
